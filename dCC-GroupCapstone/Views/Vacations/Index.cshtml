@model List<dCC_GroupCapstone.Models.Vacation>

@{
    ViewBag.Title = "Index";
}

<h2>All Public Vacations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().VacationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().LocationQueried)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Hotels)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Activities)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().AverageRating)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VacationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationQueried)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @foreach (var hotel in item.Hotels)
                {
                    @Html.DisplayFor(modelItem => hotel.Name)<br />
                }
            </td>
            <td>
                @foreach (var activity in item.Activities)
                {
                    @Html.DisplayFor(modelItem => activity.Name)<br />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageRating)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
