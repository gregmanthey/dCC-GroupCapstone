@model IEnumerable<dCC_GroupCapstone.Models.Vacation>

@{
    ViewBag.Title = "UserIndex";
}

<h2>My Saved Vacations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VacationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPrivate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocationQueried)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotels)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activities)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageRating)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VacationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPrivate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationQueried)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @foreach (var hotel in item.Hotels)
                {
                    @Html.DisplayFor(modelItem => hotel.Name)<br />
                }
            </td>
            <td>
                @foreach (var activity in item.Activities)
                {
                    @Html.DisplayFor(modelItem => activity.Name)<br />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageRating)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
